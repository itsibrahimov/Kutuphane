
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Istatistik/Index/"><i class="fa fa-fw fa-home"></i> Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="fa fa-fw fa-list"></i> Kategoriler</a>
        <a href="/Kitap/Index/"><i class="fa fa-book"></i> Kitaplar</a>
        <a href="/Yazar/Index/"><i class="fa fa-edit"></i> Yazarlar</a>
        <a href="/Uye/Index/"><i class="fa fa-user-circle-o"></i> Üyeler</a>
        <a href="/Personel/Index/"><i class="fa fa-address-card-o"></i> Personeller</a>
        @if (User.IsInRole("A"))
        {       
        <a href="/Odunc/OduncVer/"><i class="fa fa-handshake-o"></i> Ödünç Kitap Ver</a>
        <a href="/Odunc/Index/"><i class="fa fa-refresh"></i> Ödünç Kitap Al</a>
        }
        <a href="/Duyuru/Index/"><i class="fa fa-bell"></i> Duyurular</a>
        <a href="/Istatistik/Index/"><i class="fa fa-bar-chart-o"></i> İstatistikler</a>
        <a href="/Islem/Index/"><i class="fa fa-industry"></i> İşlemler</a>
        <a href="/Istatistik/Hava/"><i class="fa fa-flash"></i> Hava Raporu</a>
        <a href="/Istatistik/HavaKart/"><i class="fa fa-certificate"></i> Hava Kartları</a>
        <a href="/Istatistik/Galeri/"><i class="fa fa-gift"></i> Galeri</a>
        <a href="/Istatistik/LinqKart/"><i class="fa fa-barcode"></i> Linq Kart</a>
        <a href="/Grafik/Index/"><i class="fa fa-bar-chart"></i> Grafikler</a>
        <a href="/Vitrin/Index/"><i class="fa fa-reorder"></i> Vitrin</a>
        <a href="/Ayarlar/Index/"><i class="fa fa-sliders"></i> Ayarlar</a>
        <a href="/Panel/LogOut/"><i class="fa fa-unlock"></i> Çıkış</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>