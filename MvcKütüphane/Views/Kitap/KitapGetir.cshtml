@model MvcKütüphane.Models.Entity.TBLKİTAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KitapGetir</h2>

@using (Html.BeginForm("KitapGüncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Kitap Id</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>kitap Adı</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.TBLKATEGORİ.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazarı</label>
            @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Basım Yılı</label>
            @Html.TextAreaFor(k => k.BASIMYIL, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yayonevi</label>
            @Html.TextAreaFor(k => k.YAYINEVİ, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Sayfa</label>
            @Html.TextAreaFor(k => k.SAYFA, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kitap Resim Linki</label>
            @Html.TextBoxFor(k => k.KITAPRESIM, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <button class="btn btn-warning"> Kitap Bilgilerini Güncelle</button>
        </div>
    </div>
}