@using MvcKütüphane.Models.Entity
@model List<TBLKİTAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;"></div>
    <b>Kitap Ara:</b> @Html.TextBox("p")
<input type="submit" value="Ara" />
}


<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Kitap Yazarı</th>
        <th>Kategori</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.TBLYAZAR.AD&nbsp @item.TBLYAZAR.SOYAD</td>
            <td>@item.TBLKATEGORİ.AD</td>
            <td>@item.BASIMYIL</td>
            <td>@item.YAYINEVİ</td>
            <td>@item.SAYFA</td>
            <td>@item.DURUM</td>
            <td><a href="/Kitap/KitapSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>