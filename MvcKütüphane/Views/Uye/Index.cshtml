@using MvcKütüphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLÜYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-bordered">
    <tr>
        <th>Üye Id</th>
        <th>Üye Adı</th>
        <th>Üye Soyadı</th>
        <th>Mail</th>
        <th>Kullanıcı Adı</th>
        <th>Şifresi</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Üye Kitap Geçmişi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            <td>@item.MAIL</td>
            <td>@item.KULLANICIADI</td>
            <td>@item.SIFRE</td>
            <td>@item.TELEFON</td>
            <td>@item.OKUL</td>
            <td><a href="/Uye/UyeSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Uye/UyeKitapGecmis/@item.ID" class="btn btn-success" style="background-color:coral">Kitap Geçmişi</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa =>Url.Action("Index",new { sayfa }))

<a href="/Uye/UyeEkle/" class="btn btn-primary">Yeni Üye Ekle</a>